
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/WorkerEditPage.css" />
@* <p>@Model.PersonelAdSoyad</p> *@
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
<form asp-controller="Home" asp-action="WorkerEdit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="personelId" value="@Model.PersonelId" />
    <h3>Edit Worker</h3>
    <label for="adSoyad">Name and Surname</label>
    <input type="text" value="@Model.PersonelAdSoyad" id="adSoyad" name="adSoyad" autocomplete="off" />

        <label for="username">Username</label>
    <input type="text" value="@Model.PersonelKullaniciAd" id="username" name="username" autocomplete="off" />

        <label for="password">Password</label>
    <input type="password" value="@Model.PersonelParola" id="password" name="password" autocomplete="off" />

        <label for="birimId">Personel Yetki Tür Id</label>
    <input type="text" value="@Model.PersonelYetkiTurId" id="personelyetkiId" name="personelyetkiId" autocomplete="off" />

        <label for="phoneNumber">Phone Number</label>
    <input type="text" value="@Model.PersonelTelefonNo" id="phoneNumber" name="phoneNumber" autocomplete="off" />

        <label for="photo">Photo</label>
    <input type="file" value="@Model.PersonelPhoto" id="photo" name="photo" autocomplete="off"/>

    <button id="edit-button"type="submit">
        <div class="svg-wrapper-1">
            <div class="svg-wrapper">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 24 24"
                     width="30"
                     height="30"
                     class="icon">
                    <path d="M22,15.04C22,17.23 20.24,19 18.07,19H5.93C3.76,19 2,17.23 2,15.04C2,13.07 3.43,11.44 5.31,11.14C5.28,11 5.27,10.86 5.27,10.71C5.27,9.33 6.38,8.2 7.76,8.2C8.37,8.2 8.94,8.43 9.37,8.8C10.14,7.05 11.13,5.44 13.91,5.44C17.28,5.44 18.87,8.06 18.87,10.83C18.87,10.94 18.87,11.06 18.86,11.17C20.65,11.54 22,13.13 22,15.04Z"></path>
                </svg>
            </div>
        </div>
        <span>Save</span>
    </button>
</form>