@model List<IsTakipSistemiMVC.Models.IsDurumViewModel>
@{
    Layout = "~/Views/Shared/_LayoutCalisan.cshtml";

}
<link rel="stylesheet" href="~/css/IsListele.css"/>
<div class="container mt-3 mb-3">

    <div class="mb-3">
        <h3>List of Your Jobs to Be Completed</h3>
    </div>
    @{
        int count = 0;
    }
    @foreach (var isler in Model)
    {
        if(isler.IsDurumId ==1){
            count++;
            <div class="card mb-3">
                <div class="card-header  text-center ">
                    @isler.IsBaslik
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><b>Job Description:</b> @isler.IsAciklama</li>
                        <li class="list-group-item"><b>Job Transmission Date:</b> @isler.IletilenTarih</li>
                        <li class="list-group-item"><b>Job Status:</b> @isler.DurumAd</li>
                        <li class="list-group-item"><b>Completion Date of the Job:</b> @isler.YapilanTarih</li>
                        <li class="list-group-item"><b>Comment of Job:</b> @isler.IsYorum</li>

                    </ul>

                </div>

            </div>
        }
    }
    @if (count == 0)
    {
        <p>There is not job to be completed.</p>    
    }


    <div class="mb-3 mt-3">
        <h3>List of Your Completed Jobs</h3>
    </div>

    @{
        var count1 = 0;
    }

    @foreach (var isler in Model)
    {
        if (isler.IsDurumId == 2) 
        {
            count1++;
            <div class="card mb-3">
                <div class="card-header  text-center ">
                    @isler.IsBaslik
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><b>Job Description:</b> @isler.IsAciklama</li>
                        <li class="list-group-item"><b>Job Transmission Date:</b> @isler.IletilenTarih</li>
                        <li class="list-group-item"><b>Job Status:</b> @isler.DurumAd</li>
                        <li class="list-group-item"><b>Completion Date of the Work:</b> @isler.YapilanTarih</li>
                        <li class="list-group-item"><b>Comment of Job:</b> @isler.IsYorum</li>

                    </ul>

                </div>

            </div>
        }

    }
    @if (count1 == 0)
    {
        <p>There is not completed job.</p>    
    }

</div>
