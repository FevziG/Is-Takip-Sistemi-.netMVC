@model List<IsTakipSistemiMVC.Models.Isler>
@{
    Layout = "~/Views/Shared/_LayoutCalisan.cshtml";

}

<div class="container mt-5">
    <div class="mb-3">
        <h2>İş Tamamlama Onayı Sayfası</h2>
    </div>
    @if (ViewBag.errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>@ViewBag.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @foreach (var isler in Model)
    {
        <div class="card">
            <div class="card-header text-center">
                @isler.IsBaslik
            </div>
            <div class="card-body">
                <form asp-controller="Home" asp-action="isTamamla">
                @isler.IsAciklama
                <input type="hidden" name="IsId" value="@isler.IsId" />
                <div class="mb-4">
                    @* <label for="isYorum" class="form-label">İş hakkında yorum giriniz.</label> *@
                        <input type="text" class="form-control" id="isYorum" name="isYorum" placeholder="İş hakkında yorum giriniz." />
                </div>
                
            <div class="card-footer">
                <button type="submit"class="btn btn-outline-success">Tamamla</button>
            </div>
            </form>
            </div>
        </div>
        
    }
</div>





