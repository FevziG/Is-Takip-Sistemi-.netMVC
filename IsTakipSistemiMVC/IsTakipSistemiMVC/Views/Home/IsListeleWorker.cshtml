@model List<IsTakipSistemiMVC.Models.IsDurumViewModel>
@{
    Layout = "~/Views/Shared/_LayoutCalisan.cshtml";

}
<div class="container mt-5 mb-3">

    <div class="mb-3">
        <h3>Tamamlanması Beklenen İşlerininiz Listesi</h3>
    </div>
    @foreach (var isler in Model)
    {
        if(isler.IsDurumId ==1){
            <div class="card">
                <div class="card-header  text-center ">
                    @isler.IsBaslik
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">İş Açıklaması: @isler.IsAciklama</li>
                        <li class="list-group-item">İşin İletim Tarihi: @isler.IletilenTarih</li>
                        <li class="list-group-item">İşin Durumu: @isler.DurumAd</li>
                        <li class="list-group-item">İşin Yapılma Tarihi: @isler.YapilanTarih</li>
                        <li class="list-group-item">İş Yorumu: @isler.IsYorum</li>

                    </ul>

                </div>

            </div>
        }
    }

    <div class="mb-3">
        <h3>Tamamlanan İşlerinizin Listesi</h3>
    </div>
    @foreach (var isler in Model)
    {
        if (isler.IsDurumId == 2) 
        {
            <div class="card">
                <div class="card-header  text-center ">
                    @isler.IsBaslik
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">İş Açıklaması: @isler.IsAciklama</li>
                        <li class="list-group-item">İşin İletim Tarihi: @isler.IletilenTarih</li>
                        <li class="list-group-item">İşin Durumu: @isler.DurumAd</li>
                        <li class="list-group-item">İşin Yapılma Tarihi: @isler.YapilanTarih</li>
                        <li class="list-group-item">İş Yorumu: @isler.IsYorum</li>

                    </ul>

                </div>

            </div>
        }

    }

</div>
