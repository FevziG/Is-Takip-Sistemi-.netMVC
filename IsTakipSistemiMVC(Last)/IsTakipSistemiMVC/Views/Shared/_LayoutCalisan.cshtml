@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Job Tracking System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    @* <link href="~/css/bootstrap.css/bootstrap.min.css" rel="stylesheet"/> *@
    @* <script src="~/js/bootstrap.bundle.js/bootstrap.bundle.min.js"></script> *@


</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Job Tracking System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="WorkerPage">Home Page</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Home" asp-action="ProfilePage">My Information</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="isTamamlaPage">Complete Job</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="IsListeleWorker">Job Tracking</a>
                    </li>

                </ul>
                <form class="d-flex" asp-controller="Home" asp-action="Logout" method="post">
                    <button class="btn btn-outline-success" type="submit">Log out</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()  <!-- İçerik burada render edilecek -->
    </div>

</body>
</html>