@model List<IsTakipSistemiMVC.Models.Personeller>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>@ViewBag.WelcomeMessage</h2>

<div class="container mt-5 mb-3">
    <div class="mb-3">
        <h5>Workers in @ViewBag.BirimAd</h5>
    </div>
    <div class="card">
    @foreach (var personel in Model)
    {   
        <div class="card-header">
            Name Surname: @personel.PersonelAdSoyad      
        </div>
            
        <div class="card-body">
            
            <ul class="list-group ">
                <li class="list-group-item"> Username: @personel.PersonelKullaniciAd</li>
                <li class="list-group-item"> Authorization ID: @personel.PersonelYetkiTurId</li>
                <li class="list-group-item"> Phone Number: @personel.PersonelTelefonNo</li>
                <li class="list-group-item"> Password: @personel.PersonelParola</li>
            </ul>
                <form asp-controller="Home" asp-action="WorkerEditPage" method="post">
                    <input type="hidden" name="personelId" value="@personel.PersonelId"/>
                    <button type="submit" class="btn btn-primary" >Edit</button>
                </form>

                <form asp-controller="Home" asp-action="WorkerDelete" method="post">
                    <input type="hidden" name="personelId" value="@personel.PersonelId" />
                    <button type="submit" class="btn btn-danger">X</button>
                </form>
            
        </div>
        
           
        }
    </div>

</div>

